<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.chowjust.simone.SensorsDataViewerActivity">

    <TextView
        android:id="@+id/tvSensor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Sensor"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvAvailable"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tvAvailable"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Available"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/tvSensor"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Magnetometer"
        app:layout_constraintLeft_toLeftOf="@+id/tvSensor"
        app:layout_constraintRight_toRightOf="@+id/tvSensor"
        app:layout_constraintTop_toBottomOf="@+id/tvSensor" />

    <TextView
        android:id="@+id/tvMagnetometerAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:textColor="#ff0000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAvailable"
        app:layout_constraintRight_toRightOf="@+id/tvAvailable"
        app:layout_constraintLeft_toLeftOf="@+id/tvAvailable"
        app:layout_constraintHorizontal_bias="0.507" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Accelerometer"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvAccelerometerAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="NO"
        android:textColor="#ff0000"
        app:layout_constraintTop_toBottomOf="@+id/tvMagnetometerAvailable"
        app:layout_constraintRight_toRightOf="@+id/tvMagnetometerAvailable"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tvMagnetometerAvailable" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gyroscope"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.4" />

    <TextView
        android:id="@+id/tvGyroscopeAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="NO"
        android:textColor="#ff0000"
        app:layout_constraintTop_toBottomOf="@+id/tvAccelerometerAvailable"
        app:layout_constraintRight_toRightOf="@+id/tvAccelerometerAvailable"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/tvAccelerometerAvailable" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GPS"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/tvGPSAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="NO"
        android:textColor="#ff0000"
        app:layout_constraintTop_toBottomOf="@+id/tvGyroscopeAvailable"
        app:layout_constraintRight_toRightOf="@+id/tvGyroscopeAvailable"
        app:layout_constraintLeft_toLeftOf="@+id/tvGyroscopeAvailable"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
